                   RowHeight="120">
            <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame BackgroundColor="#fff6e3" Padding="0" Margin="2,10" CornerRadius="5">
                                <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" 
